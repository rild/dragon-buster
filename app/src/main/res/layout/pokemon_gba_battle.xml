<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/pokemon_battle_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:paddingLeft="24dp">

            <!--the other info-->
            <FrameLayout
                android:layout_width="212dp"
                android:layout_height="66dp"
                android:layout_marginTop="24dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|right"
                    android:src="@drawable/pokemon_info_under_triangle_2" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/pokemon_info_under_2" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="58dp"
                    android:background="@drawable/pokemon_info_main"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="4dp"
                                android:gravity="bottom"
                                android:text="アチャモ"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="♂"
                                android:textColor="#6ec9e6"
                                android:textSize="21sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="Lv:5"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/pokemon_info_hp"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="3dp"
                            android:text="HP"
                            android:textColor="#f4b397"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/pokemon_info_hp_progress" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>
            <!--the other info end-->

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/pokemon_ground" />

                <ImageView
                    android:layout_width="144dp"
                    android:layout_height="144dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pokemon_torchic_2" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:paddingRight="24dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="24dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="-50dp"
                    android:layout_weight="1"
                    android:src="@drawable/pokemon_ground" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="-15dp"
                    android:src="@drawable/pokemon_mudkip"
                    android:layout_weight="1"/>
            </FrameLayout>


            <!--info-->
            <FrameLayout
                android:layout_width="224dp"
                android:layout_height="86dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="24dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|left"
                    android:src="@drawable/pokemon_info_under_triangle" />

                <ImageView
                    android:layout_width="196dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|right"
                    android:src="@drawable/pokemon_info_under" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="4dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="74dp"
                        android:background="@drawable/pokemon_info_main"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="4dp"
                                    android:gravity="bottom"
                                    android:text="ミズゴロウ"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:text="♀"
                                    android:textColor="#f79f9e"
                                    android:textSize="21sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="Lv:5"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginLeft="24dp"
                            android:background="@drawable/pokemon_info_hp"
                            android:paddingLeft="6dp"
                            android:paddingRight="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="3dp"
                                android:text="HP"
                                android:textColor="#f4b397"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <ProgressBar
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_gravity="center_vertical"
                                android:max="100"
                                android:progress="100"
                                android:progressDrawable="@drawable/pokemon_info_hp_progress" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="96dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:orientation="horizontal"
                            android:paddingRight="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:text="20"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:text="／"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:text="20"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingRight="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="3dp"
                            android:text="EXP"
                            android:textColor="#dce333"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:progress="92"
                            android:progressDrawable="@drawable/pokemon_info_exp_progress" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <!--info-->

        </LinearLayout>
    </FrameLayout>

    <!--message-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#404251">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/pokemon_battle_message_frame" />


        <!--text main-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"

            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pokemon_battle_message"

            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"

            android:text="ミズゴロウは　どうする？"
            android:textColor="#f4fbff"
            android:textSize="21sp"
            android:textStyle="italic" />

        <!--menu-->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#363f3a"
            android:padding="4dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pokemon_battle_menu_frame"
                android:orientation="horizontal"

                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_play_arrow" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="たたかう" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_play_arrow"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="ポケモン" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_play_arrow"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="バッグ" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_play_arrow"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="にげる" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <!--menu end-->
    </FrameLayout>
    <!--message end-->

</LinearLayout>